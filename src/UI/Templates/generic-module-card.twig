{#
'greeting' => $greeting,
'regDate' => $regDate,
'location' => $location,
'buttonAction' => $buttonAction,
'ltiUrl' => $buttonLtiUrl,
'loginUrl' => $loginPath,
'attended' => $attended,
'absent' => $absent,
'registered' => $registered,
#}

<div class="col-md-12 mb-2 p-2 d-flex align-items-stretch" data-tags="{{card.moduleMetadata.status}} {{card.moduletype}} allModes allPrograms">
	<div class="card w-100">
		<div class="allprograms-card-body pb-0">
			<span class="card-title-area">
				<h5 class="card-title pb-2 d-block">
					<a class="modulePageLink" href="{{card.moduleUrl}}">{{card.module.title}}</a>
				</h5>
				{% if card.module.session %}
					<div class="d-block">
						{% if card.module.icon %}
							<i class="fa {{card.module.icon}} pe-1" aria-hidden="true"></i>
						{% endif %}
						{{card.module.session}}
					</div>
				{% endif %}
				{% if card.module.teaser %}
					<p class="card-text">
						{{ card.module.teaser|length > 50 ? card.module.teaser|slice(0, 50) ~ '...' : card.module.teaser }}
					</p>
				{% endif %}
			</span>
			<span class="card-data-area">
				{% if card.module.duration %}
                    <span class="card-data-span ">
                        <span class="far fa-clock" aria-hidden="true"></span>
                        {{card.module.duration}}
                    </span>
                {% endif %}
				<span class="card-data-span ">
					{% if card.moduletype == 'sync' %}
						<span class="fas fa-users" aria-hidden="true"></span>
						Synchronous
					{% else %}
						<span class="fas fa-desktop" aria-hidden="true"></span>
						Asynchronous
					{% endif %}
				</span>
				<span class="card-data-span">
					{% if card.moduleMetadata.status == 'IN_PROGRESS' and card.moduletype == 'async' %}
						<span class="badge badge-primary">In Progress</span>
					{% elseif card.moduleMetadata.status == 'IN_PROGRESS' and card.moduletype == 'sync' %}
						<span class="badge badge-primary">Registered</span>	
					{% elseif card.moduleMetadata.status == 'COMPLETE' %}
						<span class="badge badge-success">Completed</span>
					{% else %}
						<span class="badge badge-warning">Not Registered</span>
					{% endif %}					
				</span>	
			</span>
		</div>
	</div>
</div>
